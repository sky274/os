FAILS=0
TESTS=0
REDIRECT=0;

if [ -t 1 ] ; then
  echo output going to the screen
else
  REDIRECT=1;
fi

pass_fail()
{
 	NUM=$(grep -c "PASS" "$1")
	if [[ $NUM > 0 ]]; then
		echo -e '\e[0;32mPASSED!\e[0m'
	else
	{
		echo -e '\e[0;31mFAILED!!!\e[0m'
		FAILS=`expr $FAILS + 1`
	}
	fi
}

run_test()
{
	TESTS=`expr $TESTS + 1`
	echo -n $TESTS. $1 ': '
	echo '-------------------------------------------' >> all_tests_vm_output.txt
	echo $2 '' >> all_tests_vm_output.txt
	echo '' >> all_tests_vm_output.txt
	
	if [[ $REDIRECT > 0 ]]; then
		echo -ne '\tRunning test:' $TESTS '\r' >&2
	fi
	
	make $3 >> all_tests_vm_output.txt 
	pass_fail $3
	echo '-------------------------------------------'
}

echo -n > all_tests_vm_output.txt
echo '-------------------------------------------'

